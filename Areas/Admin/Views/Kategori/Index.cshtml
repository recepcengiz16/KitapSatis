@model IPagedList<ENTITY.Kategori>
@using PagedList
@using PagedList.Mvc
<link href="~/Content/PagedList.css" rel="stylesheet" />

@{
    ViewBag.Title = "Kategoriler";
}

<p></p>
<p></p>
<p></p>

<h2>Kategori Listesi</h2>

<p>
    @Html.ActionLink("Yeni Kategori Ekle", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-bordered table-hover table-responsive-sm text-center">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => ((ENTITY.Kategori)model).KategoriAdi)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAdi)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.KategoriID }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.KategoriID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istiyor musunuz?');" })
                @Html.ActionLink("Alt Kategoriler", "SubCategories", new { id = item.KategoriID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>

<p></p>
<div class="text-center">
    @Html.PagedListPager(Model, _sayfaNo => Url.Action("Index", "Kategori", new { SayfaNo = _sayfaNo }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
</div>
<p></p>
<p></p>