@model IPagedList<ENTITY.YayinEvi>
@using PagedList
@using PagedList.Mvc
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "Yatın Evleri";
}
<p></p>
<p></p>
<p></p>
<section class="section_gap">
    <div class="container">
        <p></p>
        <p></p>
        <h2>Yayın Evleri</h2>

        <table class="table table-bordered table-hover table-responsive-sm text-center">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => ((ENTITY.YayinEvi)model).YayinEviAdi)
                    </th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.YayinEviAdi)
                    </td>
                </tr>
            }

        </table>

        <div class="text-center">
            @Html.PagedListPager(Model, _sayfaNo => Url.Action("PublishingHomes", "Home", new { SayfaNo = _sayfaNo }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
        </div>
    </div>
</section>